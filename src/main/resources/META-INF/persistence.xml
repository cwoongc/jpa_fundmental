<?xml version="1.0" encoding="UTF-8" ?>
<persistence
        xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        version="2.1">
    <persistence-unit name="p-unit">
        <class>com.cwoongc.study.jpa_fundmental.member.entity.Member</class>
        <class>com.cwoongc.study.jpa_fundmental.member.entity.MemberM_1</class>
        <class>com.cwoongc.study.jpa_fundmental.member.entity.Team</class>
        <class>com.cwoongc.study.jpa_fundmental.member.entity.MemberV1</class>
        <class>com.cwoongc.study.jpa_fundmental.order.entity.OrderItemV1</class>
        <class>com.cwoongc.study.jpa_fundmental.order.entity.OrderV1</class>
        <properties>
            <!-- spring.datasource -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/> <!-- spring.datasource.driver-class-name -->
            <property name="javax.persistence.jdbc.user"  value="root"/> <!-- spring.datasource.username -->
            <property name="javax.persistence.jdbc.password" value="root"/> <!-- spring.datasource.password -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jpa"/> <!-- spring.datasource.url -->

            <!-- spring.jpa -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/> <!-- spring.jpa.database-platform -->
            <property name="hibernate.show_sql" value="true"/> <!-- spring.jpa.show-sql -->


            <!--   -->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.id.new_generator_mappings" value="true"/>


            <!-- spring.jpa.hibernate.ddl-auto -->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            
            
            <property name="hibernate.physical_naming_strategy" value="com.cwoongc.study.jpa_fundmental.common.jpa.PhysicalNamingStrategyImpl"/>









        </properties>

    </persistence-unit>
</persistence>